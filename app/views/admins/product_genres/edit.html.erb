<div class="container">
		<div class="row">
			<div class="col-3 table-active h2 text-center m-4">ジャンル編集</div>
		</div>
	<div style="padding-top: 25px;">
		<%= form_with model: @genre, url: admins_product_genre_path, method: :patch, local:true do |form| %>
			<div class="field">
				<%= form.label :ジャンル %>
				<%= form.text_field :category %>
				<%= form.radio_button :is_enabled, :true, checked: true %>
				<%= form.label :有効 %>
				<%= form.radio_button :is_enabled, :false %>
				<%= form.label :無効 %>
				<%= form.submit "変更を保存する", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>