<div class="container">
	<div class="col-5">
		<h4>ジャンル一覧・追加</h4>
		<div style="padding-top: 25px;">
			<%= form_with model: @genre, url: admins_product_genres_path, local: true do |form| %>
				<div class="field">
					<%= form.label :ジャンル %>
					<%= form.text_field :category %>
					<%= form.radio_button :is_enabled, :true, checked: true %>
					<%= form.label :有効 %>
					<%= form.radio_button :is_enabled, :false %>
					<%= form.label :無効 %>
					<%= form.submit "追加", class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>

		<div style="padding-top: 25px;">
			<table class="table">
				<thead class="thead-light">
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.category %></td>
							<% if genre.is_enabled == true %>
								<td>有効</td>
							<% elsif genre.is_enabled == false %>
								<td>無効</td>
							<% end %>
							<td>
								<div class="text-right">
									<%= link_to '編集する', edit_admins_product_genre_path(genre.id), class: "btn btn-primary" %>
								</div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>