<div class="container">
	<h3 style="margin-left: 100px;">注文履歴詳細</h3>
	<div class="row h5">
		<table class="table table-borderless">
			<tr>
				<th style="width: 20%;">購入者</th>
				<td>
					<%= link_to admins_member_path(@order.member) do %>
						<%= @order.member.last_name + @order.member.first_name %>
					<% end %>
				</td>
			</tr>
			<tr>
				<th>配送先</th>
				<td>
					〒<%= @order.postcode + @order.address %><br>
					<%= @order.addressee %>
				</td>
			</tr>
			<tr>
				<th>支払方法</th>
				<% if @order.order_status == 0 %>
					<td>クレジットカード</td>
				<% elsif @order.order_status == 1 %>
					<td>銀行振込</td>
				<% end %>
			</tr>
			<tr>
				<th>注文ステータス</th>
				<td>
					<%= form_with model: @order, url: admins_order_path, method: :patch, local: true do |f| %>
						<%= f.select :order_status, [['入金待ち', 1],['入金確認', 2],['製作中', 3],['発送準備中', 4],['発送済み', 5]],
							{}, {class: 'form-control', style: 'width: 15%; display: inline-block;'} %>
						<%= f.submit '更新', class: 'btn btn-primary' %>
					<% end %>
				</td>
			</tr>
		</table>
	</div>
	<div class="row">
		<div class="col-8">
			<table class="table">
				<thead class="thead-light">
					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th>製作ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each do |pro| %>
						<tr>
							<td><%= pro.product.name %></td>
							<td><%= pro.purchase_price %></td>
							<td><%= pro.number %></td>
							<td><%= pro.purchase_price * pro.number %></td>
							<td>
								<%= form_with model: pro, url: admins_order_product_path, method: :patch, local: true do |f| %>
									<%= f.select :production_status, [['着手不可', 1],['製作待ち', 2],['製作中', 3],['製作完了', 4]],
										{}, {class: 'form-control', style: 'width: 50%; display: inline-block;'} %>
									<%= f.submit '更新', class: 'btn btn-primary' %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col">
			<table class="table table-borderless", style="width: 60%;">
				<tr>
					<th>商品合計</th>
					<td><%= @order.subtotal - @order.postage %>円</td>
				</tr>
				<tr>
					<th>送料</th>
					<td><%= @order.postage %>円</td>
				</tr>
				<tr>
					<th>請求金額合計</th>
					<th><%= @order.subtotal %>円</th>
				</tr>
			</table>
		</div>
	</div>
</div>