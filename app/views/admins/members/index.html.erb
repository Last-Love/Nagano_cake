<div class="container">
    <div class="row">
        <div class="col-2 table-active h2 text-center mb-5">会員一覧</div>
    </div>
    <div class="row">
      <div class="col-10 m-auto">
        <table class="table">
        <thead class="thead-light">
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @members.each do |member| %>
            <tr>
                <td>
                    <%= member.id %>
                </td>
                <td>
                    <%= link_to admins_member_path(member) do %>
                    <%= member.last_name %>
                    <%= member.first_name %>
                </td>
                <% end %>
                <td>
                    <%= member.email %>
                </td>
                <% if member.is_enabled == true %>
                <td>有効</td>
                <% elsif member.is_enabled == false %>
                <td>退会済み</td>
                <% else %>
                <td></td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
        </table>
        <div class="row">
            <div class="col-4 offset-5">
                <%= paginate @members %>
            </div>
        </div>
      </div>
    </div>
</div>