<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <h2><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h2><br >



        <%= form_for(@member, url:admins_member_path, method: :PATCH ) do |f| %>

        <div class="field">
          <%= f.label :氏名 %>
          <%= f.text_field :last_name, class: "last_name" %>
          <%= f.text_field :first_name, class: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana, class: "last_name_kana" %>
          <%= f.text_field :first_name_kana, class: "first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postcode, class: "postcode" %>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "address" %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %>
          <%= f.text_field :phone_number, class: "phone_number" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, class: "email" %>
        </div>

        <div class="field">
          <%= f.label :会員ステータス %>
          <%= f.radio_button :is_enabled, :true, checked: true %>
          <%= f.label :有効 %>
          <%= f.radio_button :is_enabled, :false %>
          <%= f.label :退会済み %>
        </div>

        <div class="actions">
          <%= f.submit :変更を保存する %>
        </div>

        <% end %>
      </div>
  </div>
</div>