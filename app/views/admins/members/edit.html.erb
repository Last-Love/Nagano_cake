<div class="container">
  <div class="row">
    <div class="col-4 table-active text-center h4"><%= @member.last_name %><%= @member.first_name %>さんの会員詳編集</div>
  </div>

  <%= form_for(@member, url:admins_member_path, method: :PATCH ) do |f| %>
  <div class="row">
    <div class="col-7">
    <table class="table table-borderless">

      <tr>
        <td class="align-middle">会員ID</td>
        <td><%= @member.id %></td>
      </tr>

      <tr>
        <td class="align-middle">氏名</td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
        <td><%= f.text_field :first_name, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
      </tr>

      <tr>
        <td class="align-middle">フリガナ</td>
        <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
      </tr>

      <tr>
        <td class="align-middle">郵便番号</td>
        <td><%= f.text_field :postcode, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
      </tr>

      <tr>
        <td class="align-middle">住所</td>
        <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
      </tr>

        <tr>
          <td class="align-middle">電話番号</td>
          <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
        </tr>

        <tr>
          <td class="align-middle">メールアドレス</td>
          <td><%= f.text_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
        </tr>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <table class="table table-borderless">
        <tr>
          <td class="align-middle">
            <%= f.label :会員ステータス %>
          </td>
          <td><%= f.radio_button :is_enabled, :true %></td>
            <td><%= f.label :有効 %></td>
          <td><%= f.radio_button :is_enabled, :false %></td>
            <td><%= f.label :退会済み %></td>
        </tr>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <%= f.submit :変更を保存する, class: "btn btn-primary btn-block" %>
    </div>
  </div>
  <% end %>
</div>