<div class="container">
	<div class="row">
		<div class="col-2 offset-1 table-active h4 text-center">商品新規登録</div>
	</div>
    <div style="padding-top: 80px;">
        <%= form_with model: @product, url: admins_products_path, local: true do |form| %>
        <div class="row">
            <div class="col-4">
                <div style="width: 250px; height: 200px; background-color: #FF0000;"></div>
                <%= form.attachment_field :image, style: "padding-top: 25px;" %>
            </div>
            <div class="col-6">
                <div>
                    <%= form.label :商品名, style: "width: 15%;" %>
                    <%= form.text_field :name, style: "width: 45%;" %>
                </div><br>
                <div>
                    <%= form.label :商品説明, style: "width: 15%;", class: "align-top" %>
                    <%= form.text_area :description, style: "width: 45%; height: 120px;" %>
                </div><br>
                <div>
                    <%= form.label :ジャンル, style: "width: 15%;" %>
                    <%= form.collection_select :product_genre_id, ProductGenre.all, :id, :category,
					 	{include_blank: "選択してください"}, {class: "custom-select-sm", style: "width: 45%;"} %>
                </div><br>
                <div>
                    <%= form.label :税抜価格, style: "width: 15%;" %>
                    <%= form.text_field :unit_price, style: "width: 45%;" %>円
                    <div><br>
                        <%= form.label :販売ステータス, style: "width: 15%;" %>
                        <%= form.select :is_sales, [["販売中",true],["売切れ",false]],
						 {include_blank: "選択してください"}, class: "custom-select-sm",style: "width: 45%;" %>
                    </div><br>
                    <div class="text-right">
                        <%= form.submit "新規登録", class: "btn btn-primary btn-lg" %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>