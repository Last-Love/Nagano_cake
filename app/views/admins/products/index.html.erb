<div class="container">
	<div class="row">
		<div class="col-2 table-active text-center h2">商品一覧</div>
	</div>
	<div class="col text-right mr-2 mb-2">
		<%= link_to '＋', new_admins_product_path, class: "btn btn-primary rounded-circle" %>
	</div>
	<table class="table">
		<thead class="thead-light">
			<tr class="active">
				<th>商品ID</th>
				<th>商品名</th>
				<th>税抜価格</th>
				<th>ジャンル</th>
				<th>ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><%= product.id %></td>
					<td><%= link_to product.name, admins_product_path(product) %></td>
					<td><%= product.unit_price %></td>
					<td><%= product.product_genre.category %></td>
					<% if product.is_sales == true %>
						<td>販売中</td>
					<% elsif product.is_sales == false %>
						<td>販売停止中</td>
					<% else %>
						<td></td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div class="row">
		<div class="col-3 offset-5">
			<%= paginate @products %>
		</div>
	</div>
</div>
