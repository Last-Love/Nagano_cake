<h1>Member_CartItem_show</h1>

<div class="container">
	<h3>ショッピングカート</h3>

	<table class="table table-bordered">
		<thead class="thead-light">
			<tr>
				<th>商品名</th>
				<th>単価(税込)</th>
				<th>数量</th>
				<th>小計</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @carts.each do |cart| %>
				<tr>
					<td>
						<%= attachment_image_tag @product, :image, fallback: 'no_image.jpg', size: '50x40' %>
						<%= cart.product.name %>
					</td>
					<td><%= (cart.product.unit_price * @tax).round %></td>
					<td>
						<%= form_with model: cart, url: members_cart_item_path, method: :patch, local: true do |item| %>
							<%= item.number_field :number, style: "width: 50px;" %>
							<%= item.submit "変更", class: "btn btn-primary" %>
						<% end %>
					</td>
					<td><%= ((cart.product.unit_price * @tax).round) * cart.number %></td>
					<td><%= link_to '削除する', members_cart_item_path(cart), method: :delete, class: "btn btn-danger" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "買い物を続ける", members_products_path, class: "btn btn-primary" %>
	<%= link_to "情報入力に進む", new_members_order_path, class: "btn btn-success" %>
</div>