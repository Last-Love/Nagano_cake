<div class="container">

<div class="row">
<h2>配送先登録/一覧</h2>



<form class="form-horizontal">
	<%= form_for(@shipping_address, url: members_shipping_addresses_path, method: :post) do |f| %>
		<div class="form-group">
	  		<label class="col-xs-2">郵便番号(ハイフンなし)</label>
	  		<div class="col-xs-3">
	    	<%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", :class => "form-control" %>
	    	</div>
		</div>

		<div class="form-group">
	    	<label class="col-xs-2">住所</label>
	    	<div class="col-sm-6">
	    	<%= f.text_field :address, autofocus: true, autocomplete: "address", :class => "form-control" %>
	    	</div>
	  	</div>

	  	<div class="form-group">
	    	<label class="col-sm-2">宛名</label>
	    	<div class="col-sm-3">
	      	<%= f.text_field :addressee, autofocus: true, autocomplete: "addressee", :class => "form-control" %>
	    	</div>
	  	</div>

	  	<div class="form-group">
	 		<div class="col-xs-2 col-xs-offset-8">
	  		<%= f.submit "登録する", class: "btn btn-success btn-block" %>
	  		</div>
	  	</div>
 	<% end %>
</form>

</div>


<div class="row">
<table class="table">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @shipping_addresses.each do |shipping_address| %>
		<tr>
			<td><%= shipping_address.postcode %></td>
			<td><%= shipping_address.address %></td>
			<td><%= shipping_address.addressee %></td>
			<td></td>
		</tr>
		<% end %>
	</tbody>

</table>

</div>

</div>