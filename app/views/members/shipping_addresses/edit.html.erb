<div class="container">
	<div class="row">
		<h3 class="bg-info">配送先登録/一覧</h3>
		<div class="form-horizontal">
		<%= form_for(@shipping_address, url: members_shipping_address_path) do |f| %>
			<div class="form-group">
				<label class="col-xs-2">郵便番号(ハイフンなし)</label>
				<div class="col-xs-3">
					<%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", :class => "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<label class="col-xs-2">住所</label>
				<div class="col-sm-6">
				    <%= f.text_field :address, autofocus: true, autocomplete: "address", :class => "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2">宛名</label>
				<div class="col-sm-3">
				    <%= f.text_field :addressee, autofocus: true, autocomplete: "addressee", :class => "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-xs-2 col-xs-offset-8">
				  	<%= f.submit "編集する", class: "btn btn-primary btn-block" %>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>