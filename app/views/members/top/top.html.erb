<div class="shutter"></div>
<div class="container">
	<% if flash[:notice] %>
  		<p><%= flash[:notice] %></p>
	<% end %>
    <div class="row">
        <div class="col-2">
            <table class="table table-borderless border">
                <tr class="border-bottom">
                    <th>ジャンル検索</th>
                </tr>
                <% ProductGenre.where(is_enabled: true).each do |genre| %>
                <tr>
                    <th>
                        <%= link_to members_products_genre_path(genre) do %>
                        <span class="text-muted"><u><%= genre.category %></u></span>
                        <% end %>
                    </th>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="col-10">
        	<div class="row", style="margin-bottom: 30px;">
        		<div class="col-12 top-visual">
        			<div class="top-visual-content mx-auto">
        				<span class="text-center">
									<% if member_signed_in? %>
											<h5>
												ようこそ、ながのCAKEへ<br>
												このサイトは、ケーキ販売のECサイトになります。<br>
											</h5>
											<p>どうぞ、ごゆっくりご覧ください。
											</p>
									<% else %>
											<h5>
												ようこそ、ながのCAKEへ<br>
												このサイトは、ケーキ販売のECサイトになります。<br>
											</h5>
											<p>※お手数ですが、ご購入をご希望の方は,
											<br>右上の新規登録より会員登録をお願いいたします。
											</p>
										<% end %>
									</span>
        			</div>
        		</div>
        	</div>
        	<!-- おすすめ商品 -->
        	<h3 class="bg"><u>本日のオススメ商品</u></h3>
        	<div class="row">
            	<% @products.each do |product| %>
            	<div class="float-left" , style="padding: 15px;">
            	    <%= link_to members_product_path(product) do %>
            	    <%= attachment_image_tag product, :image, fallback: "no_image.jpg", size: "200x160" %><br>
            	    <span class="text-dark"><%= product.name %></span><br>
            	    <span class="text-dark">¥<%= ((product.unit_price * @tax).round).to_s(:delimited) %></span>
            	    <% end %>
            	</div>
            	<% end %>
        	</div>
        	<div class="float-right"><%= link_to 'もっと見る>', members_products_path %></div>
        	<!--  -->
        </div>
    </div>
							<%# <div class="start">
            <p><img src="../../assets/logo.png"></p>
          </div> %>
</div>