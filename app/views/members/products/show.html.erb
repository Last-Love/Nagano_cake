<h1>Members_Products_Show</h1>
<%= link_to '商品一覧', members_products_path %>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<label>
				ジャンル検索
			</label>
		</div>
		<div class="col-xs-9">
			<div>
				<%= attachment_image_tag @product, :image, fallback: 'no_image.jpg', size: '200x160' %>
				<%= @product.name %>
				<%= @product.description %>
				¥<%= (@product.unit_price * @tax).round %>税込
			</div>
			<div>
				<%= form_with model: @cart_item, url: members_cart_items_path do |form| %>
					<%= form.select :number, [["1", 1 ],["2", 2 ],["3", 3 ]] %>
					<%= form.hidden_field :member_id, value: current_member.id %>
					<%= form.hidden_field :product_id, value: @product.id %>
					<%= form.submit %>
				<% end %>
			</div>
		</div>
	</div>
</div>