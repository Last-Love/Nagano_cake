<div class="container">
    <div class="row">
        <div class="col-2">
            <table class="table table-borderless border">
                <tr class="border-bottom">
                    <th>ジャンル検索</th>
                </tr>
                <% ProductGenre.where(is_enabled: true).each do |genre| %>
                <tr>
                    <th>
                        <%= link_to members_products_genre_path(genre) do %>
                        <span class="text-muted"><u><%= genre.category %></u></span>
                        <% end %>
                    </th>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="col">
            <h3><b><%= @genre.category %>一覧</b>(全<%= @pn %>件)</h3>
            <% @products.each do |product| %>
            <div class="float-left" , style="padding: 10px;">
                <%= link_to members_product_path(product) do %>
                <%= attachment_image_tag product, :image, fallback: "no_image.jpg", size: "200x160" %><br>
                <span class="text-dark"><%= product.name %></span><br>
                <span class="text-dark">¥
                <%= ((product.unit_price * @tax).round).to_s(:delimited) %></span>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-4 offset-5">
            <%= paginate @products %>
        </div>
    </div>
</div>
</div>