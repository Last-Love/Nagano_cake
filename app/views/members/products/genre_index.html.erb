<h1>Members_Product_GenreIndex</h1>
<%= link_to '商品一覧', members_products_path %>
<%= link_to 'カート詳細', members_cart_item_path(current_member) %>

<div class="row">
	<div class="col-1"></div>
	<div class="col-2">
		<table class="table table-borderless border">
			<tr class="border-bottom">
				<th>ジャンル検索</th>
			</tr>
			<% ProductGenre.all.each do |genre| %>
			<tr>
				<th>
					<%= link_to members_products_genre_path(genre) do %>
						<%= genre.category %>
					<% end %>
				</th>
			</tr>
			<% end %>
		</table>
	</div>
	<div class="col-9">
		<h3><b>商品一覧</b>(全<%= @products.count %>件)</h3>
		<% @products.each do |product| %>
			<div class= "float-left", style="padding: 10px;">
				<%= link_to members_product_path(product) do %>
					<%= attachment_image_tag product, :image, fallback: "no_image.jpg", size: "200x160" %><br>
					<%= product.name %><br>
					¥<%= (product.unit_price * @tax).round %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
