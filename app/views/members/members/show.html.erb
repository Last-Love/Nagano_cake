<div class="container">
	<div class="row">
      <div class="col-2 offset-1 align-items-center table-active text-center h4">マイページ</div>
    </div>
	<div class="row">
		<div class="col-1 font-weight-bold h5">登録情報</div>
		<div class="col-2"><%= link_to "編集する", edit_members_member_path, class: "btn btn-primary btn-block" %></div>
		<div class="col-2"><%= link_to "パスワードを変更する", edit_member_password_path(current_member) %></div>
	</div>

	<div class="row">
		<div class="col-8">
			<table class="table table-bordered">
				<tbody>
					<tr>
						<td class="table-active" width="300">氏名</td>
						<td width="700"><%= @member.last_name %></td>
					</tr>
					<tr>
						<td class="table-active">カナ</td>
						<td><%= @member.last_name_kana %></td>
					</tr>
					<tr>
						<td class="table-active">郵便番号</td>
						<td><%= @member.postcode %></td>
					</tr>
					<tr>
						<td class="table-active">住所</td>
						<td><%= @member.address %></td>
					</tr>
					<tr>
						<td class="table-active">電話番号</td>
						<td><%= @member.phone_number %></td>
					</tr>
					<tr>
						<td class="table-active">メールアドレス</td>
						<td><%= @member.email %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-4">
			<table class="table table-borderless">
				<tr>
					<td width="150"><h5 class="font-weight-bold">配達先</h5></td>
					<td ><%= link_to "一覧を見る", members_shipping_addresses_path, class: "btn btn-primary btn-block" %></td>
				</tr>
				<tr>
					<td width="150"><h5 class="font-weight-bold">注文履歴</h5>
					<td >過去の履歴</td>
				</tr>
			</table>
		</div>
	</div>
		
</div>