<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row">
    <%= flash[:error] %>
    <div class="col-4 offset-1 align-items-center table-active text-center h4">会員の方はこちらからログイン</div>
  </div>

  <div class="row">
    <div class="col-10">
      <table class="table table-borderless">
        <tr>
          <td class="align-middle" align="right">メールアドレス</td>
          <td colspan="6"><%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
        </tr>
        <tr>
          <td class="align-middle" align="right">パスワード　　</td>
          <td colspan="6"><%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %></td>
          <td></td>
        </tr>
      </table>
      <div class="offset-8">
      <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2 offset-4">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    </div>
  </div>

  <div class="row">
      <div class="col-3 offset-1 align-items-center table-active text-center h4">登録がお済みでない方</div>
  </div>

  <div class="row">
    <div class="offset-3">
      <%= link_to "こちら", new_registration_path(resource_name) %>　新規登録を行ってくだい。
    </div>
  </div>
  
      

      

    </div>
  </div>
</div>
<% end %>