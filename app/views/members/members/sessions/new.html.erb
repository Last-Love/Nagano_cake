<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="row">
      <div class="col-4 offset-2 align-items-center table-active text-center h4">会員の方はこちらからログイン</div>
  </div>

  <div class="row">
    <div class="col-8">
      <table class="table table-borderless">
        <tr>
          <td class="align-middle">メールアドレス</td>
          <td colspan="6"><%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
        </tr>
        <tr>
          <td class="align-middle">パスワード</td>
          <td colspan="6"><%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %></td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
    

  <div class="col-xs-6 col-xs-offset-6">
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "members/members/shared/links" %>

    </div>
  </div>
</div>
