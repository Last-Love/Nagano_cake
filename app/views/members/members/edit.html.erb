<%= form_for ([:members,@member]) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-2 offset-2 align-items-center table-active text-center h4">登録情報編集</div>
  </div>

  <div class="row">
    <div class="col-9">
    <table class="table table-borderless">
      <tr>
        <td class="align-middle">名前</td>
        <td class="align-middle">(姓)</td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :class => "form-control" %></td>
        <td class="align-middle">(名)</td>
        <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :class => "form-control" %></td>
      </tr>

      <tr>
        <td class="align-middle">名前</td>
        <td class="align-middle">(セイ)</td>
        <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :class => "form-control" %></td>
        <td class="align-middle">(メイ)</td>
        <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :class => "form-control" %></td>
      </tr>

      <tr>
        <td class="align-middle">メールアドレス</td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %></td>
      </tr>

      <tr>
        <td class="align-middle">郵便番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", :class => "form-control" %></td>
      </tr>

      <tr>
        <td class="align-middle">住所</td>
        <td></td>
        <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address", :class => "form-control" %></td>
      </tr>

      <tr>
        <td class="align-middle">電話番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", :class => "form-control" %></td>
      </tr>

    </table>
    </div>
  </div>
  <div class="row">
    <div class="col-3 offset-2">
      <%= f.submit "編集内容を保存する", class: "btn btn-primary btn-block" %>
    </div>
    <div class="col-2 offset-2">
      <%= link_to "退会する", members_disable_confirm_path, class: "btn btn-danger btn-block" %>
    </div>
  </div>
</div>
<% end %>