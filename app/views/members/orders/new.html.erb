<div class="container">
  <div class="row">
    <div class="col-3">
    <h2>注文情報入力</h2>
      <%= form_with model: @order, url: members_confirm_path, local: true do |f| %>
        <div class="field">
          <h3><%= f.label :支払方法 %></h3>
          <%= f.radio_button :payment_method, :true, checked: true %>
          <%= f.label :クレジットカード %><br>
          <%= f.radio_button :payment_method, :false %>
          <%= f.label :銀行振込 %>
        </div>

        <div class="field">
          <h3><%= f.label :お届け先 %></h3>
          <%= radio_button_tag(:shipping_address, 1, checked: true) %>
          <%= f.label :ご自身の住所 %><br>
          <%= radio_button_tag(:shipping_address, 2) %>
          <%= f.label :登録済住所から選択 %>
            <%= f.collection_select :shipping_address, current_member.shipping_addresses, :id, :address, include_blank: "選択してください" %>
            <%= f.hidden_field :member_id, value: current_member.shipping_addresses %>

        <div class="field">
          <%= radio_button_tag(:shipping_address, 3) %>
          <%= f.label :新しいお届け先 %>

          <div class="row">
            <div class="col-xs-3">
              <p>郵便番号(ハイフンなし)</p>
            </div>
            <div class="col-xs-3 form-inline">
              <div class="col-xs-2"><%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", :class => "form-control" %></div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-3">
              <p>住所</p>
            </div>
            <div class="col-xs-9 form-inline">
              <div class="col-xs-9"><%= f.text_field :address, autofocus: true, autocomplete: "address", :class => "form-control" %></div>
            </div>
          </div>


          <div class="row">
            <div class="col-xs-3">
              <p>宛名</p>
            </div>
            <div class="col-xs-9 form-inline">
              <div class="col-xs-9"><%= f.text_field :addressee, autofocus: true, autocomplete: "addressee", :class => "form-control" %></div>
            </div>
          </div>
        </div>
        </div>
        <%= f.submit :"確認画面へ進む" %>
      <% end %>
    </div>
  </div>
</div>