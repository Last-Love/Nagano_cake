<div class="container">
	<h4>注文履歴詳細</h4>
	<div class="row">
		<div class="col-6">
			<h6>注文情報</h6>
			<table class="table table-bordered">
				<tr>
					<td class="table-active">注文日</td>
					<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
				</tr>
				<tr>
					<td class="table-active">配送先</td>
					<td>
						<%= @order.postcode %>
						<%= @order.address %>
						<%= @order.addressee %>
					</td>
				</tr>
				<tr>
					<td class="table-active">支払方法</td>
					<td>
						<% if @order.payment_method == 0 %>
							クレジットカード
						<% elsif @order.payment_method == 1 %>
							銀行振込
						<% end %>
					</td>
				</tr>
				<tr>
					<td class="table-active">ステータス</td>
					<td>
						<% if @order.order_status == 1 %>
							入金待ち
						<% elsif @order.order_status == 2 %>
							入金確認
						<% elsif @order.order_status == 3 %>
							発送準備中
						<% elsif @order.order_status == 4 %>
							発送済み
						<% end %>
					</td>
			</table>
		</div>
		<div class="col-3">
			<h6>請求情報</h6>
			<table class="table table-bordered">
				<tr>
					<td class="table-active">商品合計</td>
					<td><%= @order.subtotal.to_i - @order.postage.to_i %></td>
				</tr>
				<tr>
					<td class="table-active">配送料</td>
					<td><%= @order.postage %></td>
				</tr>
				<tr>
					<th class="table-active">ご請求額</th>
					<td><%= @order.subtotal %></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-8">
			<h6>注文内容</h6>
			<table class="table table-bordered">
				<thead>
					<tr class="table-active">
						<td>商品</td>
						<td>単価(税込)</td>
						<td>個数</td>
						<td>小計</td>
					</tr>
				</thead>
				<tbody>
					<% @order.order_products.each do |op| %>
						<tr>
							<td><%= op.product.name %></td>
							<td><%= op.purchase_price %></td>
							<td><%= op.number %></td>
							<td><%= op.purchase_price * op.number %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>